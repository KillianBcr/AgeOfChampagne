{% extends 'base.html.twig' %}

{% block title %}Liste des Cartes{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des cartes</h1>

        <div class="d-flex justify-content-center flex-wrap container-partner-card">
            {% for carte in cartes %}
                <div class="card" style="width: 18rem;">
                    <a href="{{ path('app_carte_show', {'id': carte.id}) }}"><img class="card-img-top" src="{{ vich_uploader_asset(carte, 'imageFile')  }}" alt="Card image cap">
                    </a>
                </div>
            {% endfor %}
        </div>

    </div>


{% endblock %}
{% extends '../../base.html.twig' %}

{% block title %}Liste des Cartes{% endblock %}

{% block body %}
    <h1>Liste des Cartes</h1>
    <ul class="flex-container">
        {% for Carte in Cartes %}
            <div class="flex-items">
                <li><a href ='{{ path('app_carte_show', {'id': Carte.id}) }}'>{{ Carte.qrcode() }}</li>
                <li>{{ Carte.name }}</li>
                <li>{{ Carte.description }}</li>
            </div>
        {% endfor %}
    </ul>




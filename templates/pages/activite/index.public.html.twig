{% extends 'base.html.twig' %}

{% block title %}Liste des Activites{% endblock %}

{% block body %}
<link rel="stylesheet" href="style.css">
    <h1 class="titleform" style="font-size:30px; padding-top:15px;">Liste des Activites</h1>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-4">
            {{ message }}
        </div>
    {% endfor %}
    <ul class="contentUl">
        {% for activite in activites %}
            <div class="flex-items">
                <a class="textform" style="text-decoration:none;" href ='{{ path('app_activite_show', {'id': activite.id}) }}'>
                <li class="contentLi">
                    <nav class="column" style="margin-left:20px; justify-content: space-around;">
                    <p class="textform" style="font-size:20px;">Nom de la activite : <strong>{{ activite.nom }}</strong></p>
                    <p class="textform" style="font-size:20px;">Nom de la activite : <strong>{{ activite.id }}</strong></p>
                    <p class="textform" style="font-size:20px;">Nom de la activite : <strong>{{ activite.icon() }}</strong></p>
                    <p class="textform" style="font-size:20px;">Nom de la activite : <strong>{{ activite.description }}</strong></p>
                    </nav>
                </li>
                </a>
            </div>
        {% endfor %}
    </ul>




{% endblock %}
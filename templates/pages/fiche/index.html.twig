{% extends 'base.html.twig' %}

{% block title %}AOC - Partenaire - Fiches
{% endblock %}

{% block body %}
    <div class="container mt-4">

            {% for message in app.flashes('success') %}
                <div class="alert alert-success mt-4">
                    {{ message }}
                </div>
            {% endfor %}

        <h1>Mes Fiches</h1>
            <a href="{{ path('app_fiche_new') }}" class="btn btn-primary">
                Créer une fiche
            </a>

            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Numéro</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Date de création</th>
                    <th scope="col">Edition</th>
                    <th scope="col">Suppresion</th>
                </tr>
                </thead>
                <tbody>
                {% for fiche in fiches %}
                    <tr class="table-primary">
                        <th scope="row">{{ fiche.id }}</th>
                        <td>{{ fiche.nom }}</td>

                        <td>{{ fiche.createdAt|date('d/m/Y') }}</td>
                        <td>
                            <a href="{{ path('app_fiche_edit', { id: fiche.id }) }}" class="btn btn-info">Modifier</a>
                        </td>
                        <td>
                            <a href="{{ path('app_fiche_delete', { id: fiche.id }) }}" class="btn btn-warning">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>



    </div>
{% endblock %}

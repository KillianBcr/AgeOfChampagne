{% extends 'base.html.twig' %}

{% block title %}AOC - Partenaires {% endblock %}
{% block header %}<link rel="stylesheet" href="style.css"> {% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Nos Partenaires</h1>

        <div class="d-flex justify-content-center flex-wrap container-partner-card">
            {% for fiche in fiches %}
                <div class="card border-primary">
                    <div class="card-header">Partenaire nÂ°{{ fiche.id }}</div>
                    <div class="card-body partner-div">
                        <img src="{{ vich_uploader_asset(fiche, 'imageFile')  }}" alt="">
                        {#  {{ dump(fiche) }} #}
                        <h4 class="card-title">
                            <a href="{{ path('app_fiche_show', {id: fiche.id}) }}">{{ fiche.nom }}</a>
                        </h4>
                        <p class="card-text">{{ fiche.description|slice(0, 100) ~ '...' }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
